<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="5dp">
    <TextView
        android:id="@+id/description_recycler_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELLO"
        android:textSize="20dp"/>
    <ImageView
        android:id="@+id/description_recycler_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sun"
        android:layout_below="@+id/description_recycler_time"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/description_recycler_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textSize="40dp"
        android:layout_alignBottom="@+id/description_recycler_image"
        android:layout_toEndOf="@+id/description_recycler_image"
        android:layout_marginStart="11dp" />

    <ImageView
        android:id="@+id/description_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/celsius"
        android:layout_alignBottom="@+id/description_recycler_temp"
        android:layout_toEndOf="@+id/description_recycler_temp" />

</RelativeLayout>