<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:id="@+id/description_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="22.12.2232"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/description_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        app:srcCompat="@drawable/sun"
        android:layout_below="@+id/description_date"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/description_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="25"
        android:layout_alignBottom="@+id/description_image"
        android:layout_toEndOf="@+id/description_image"
        android:layout_marginStart="50dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/celsius"
        android:layout_above="@+id/description"
        android:layout_toEndOf="@+id/description_temp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/description_image"
        android:layout_below="@+id/description_image"
        android:layout_marginTop="35dp"
        android:text="TextView"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/clouds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/description"
        android:layout_below="@+id/description"
        android:layout_marginTop="19dp"
        android:text="TextView"
        android:textSize="20dp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clouds"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
